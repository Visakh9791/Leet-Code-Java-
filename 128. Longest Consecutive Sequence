class Solution {
    public int longestConsecutive(int[] nums) {
        Set<Integer> file= new HashSet<>();

        int max=0;
        
        for(int n:nums){
            file.add(n);
        }

        for(int i=0;i<nums.length;i++){
            int n = nums[i];
            if(file.contains(n-1)){
                continue;
            }
            else{
                int ln=0;
                while(file.contains(n)){
                    n++;
                    ln++;
                }
                max = Math.max(max,ln);
            }
        }
        return max;
    }
}
