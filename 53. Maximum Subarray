class Solution {
    public int maxSubArray(int[] nums) {
        int cur_sum = 0;
        int max_sum = nums[0];

        for(int i=0;i<nums.length;i++){
            if(cur_sum < 0){
                cur_sum=0;
            }
            
        cur_sum = cur_sum + nums[i];
        max_sum = Math.max(cur_sum,max_sum);
            
        }
        return max_sum;
        
    }
}
